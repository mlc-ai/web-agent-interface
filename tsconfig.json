{
  "compilerOptions": {
    "target": "es2022",
    "declaration": true,
    "outDir": "lib",
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
  },
  "typeRoots": ["./node_modules/@types"],
  "include": ["src"],
  "exclude": ["node_modules", "build", "dist", "rollup.config.cjs"]
}
